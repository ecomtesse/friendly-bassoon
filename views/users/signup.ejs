<%- include("../partials/head.ejs") %>
<%- include("../partials/header.ejs") %>
    <main>
        <div class="signup container">
            <h2>Sign Up</h2>

            <div class="flash-messages">
                <% if (messages.success) { %>
                    <% for (let msg of messages.success) { %> 
                        <p class="success"><%= msg %></p>
                    <% } %>
                <% } %>
                <% if (messages.info) { %>
                    <% for (let msg of messages.info) { %> 
                        <p class="info"><%= msg %></p>
                    <% } %>
                <% } %>
                <% if (messages.error) { %>
                    <% for (let msg of messages.error) { %> 
                        <p class="error"><%= msg %></p>
                    <% } %>
                <% } %>
            </div>
            <div class="d-flex justify-content-center">
                <form action="<%= baseUrl %>" method="post">
                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" name="username" id="username" required/>
                        <label for="floatingInput">Username</label>
                    </div>
                    <div class="form-floating mb-3">    
                        <input class="form-control" type="password" name="password" id="password" required/>
                        <label for="password floatingInput">Password</label>
                    </div> 
                    <input class="btn btn-primary log-btn" type="submit" value="Let's Go"/>
                </form>
            </div>
            <h3>Welcome!</h3>
            <img src="https://cdn.vox-cdn.com/thumbor/VQcTF72j2565uNFJK1O70bV0cfc=/0x0:1024x683/1400x1050/filters:focal(0x0:1024x683):format(jpeg)/cdn.vox-cdn.com/uploads/chorus_image/image/34478953/557A1433c-XL.0.jpg" alt="large collection image">    
        </div>    
    </main>
<%- include("../partials/footer.ejs") %>